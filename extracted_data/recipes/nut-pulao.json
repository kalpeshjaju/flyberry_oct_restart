  "instructions": [
    {
      "step": 1,
      "action": "Heat ghee in a large pan, add whole spices and let them sizzle"
    },
    {
      "step": 2,
      "action": "Add sliced onions and sauté until golden brown"
    },
    {
      "step": 3,
      "action": "Add all the nuts (macadamia, cashews, almonds) and roast for 2-3 minutes"
    },
    {
      "step": 4,
      "action": "Add drained rice and gently sauté for 2 minutes"
    },
    {
      "step": 5,
      "action": "Add water and salt, bring to a boil"
    },
    {
      "step": 6,
      "action": "Reduce heat to low, cover and cook for 15-18 minutes until rice is tender"
    },
    {
      "step": 7,
      "action": "Turn off heat and let it rest covered for 5 minutes"
    },
    {
      "step": 8,
      "action": "Fluff with a fork, garnish with fresh coriander and serve hot"
    }
  ],
